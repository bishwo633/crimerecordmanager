@model IEnumerable<CrimeRecordManager.Models.ComplaintRegistration>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped" id="complaint-index-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccusedDetail.AccusedName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComplainBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CitizenshipNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComplainDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComplainDetails)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AccusedDetail.AccusedName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ComplainBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CitizenshipNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ComplainDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ComplainDetails)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
@section styles{
    <link href="~/Content/DataTables/media/css/jquery.dataTables.min.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/Scripts/DataTables/media/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#complaint-index-table').DataTable();
        });
    </script>
}

